name: Deploy to Kubernetes

on:
  workflow_dispatch:   # Run manually from GitHub Actions tab

jobs:
  deploy:
    runs-on: self-hosted
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v3

      - name: Set Kubeconfig
        run: |
          mkdir -p $HOME/.kube
          echo "${{ secrets.KUBECONFIG_FILE }}" > $HOME/.kube/config

      - name: Deploy ConfigMap
        run: kubectl apply -f k8s-manifests/configmap.yaml

      - name: Deploy App
        run: kubectl apply -f k8s-manifests/deployment.yaml

      - name: Deploy Service
        run: kubectl apply -f k8s-manifests/service.yaml
